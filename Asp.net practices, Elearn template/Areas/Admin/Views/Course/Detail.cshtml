@model Course
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h1>Slider info detail</h1>
    <table class="table table-dark">
        <thead>
            <tr>
                <th> Image </th>
                <th> Name </th>
                <th> Description </th>
                <th> Price </th>
                <th> Sale Count </th>
                <th> Author Fullname </th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    <div class="img-detail">
                        <img class="img-fluid" src="~/images/@Model.CourseImages.FirstOrDefault().Image" />
                    </div>

                </td>
                <td>
                    @Model.Name
                </td>
                <td style="white-space:normal">
                    @Model.Description
                </td>
                <td style="white-space:normal">
                    @Model.Price
                </td>
                <td style="white-space:normal">
                    @Model.SaleCount
                </td>
                <td style="white-space:normal">
                    @Model.Author.Fullname
                </td>
            </tr>

        </tbody>
    </table>
    <div class="back">
        <a class="btn btn-primary btn-rounded btn-fw my-5" asp-action="Index">
            <i class="mdi mdi-arrow-left-bold"></i>
            Back to main page
        </a>
    </div>
</div>
